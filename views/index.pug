doctype html
html(lang="fr")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    style.
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        min-height: 100vh;
        padding: 20px;
        color: #fff;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
      }
      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #e94560;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      }
      table {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255,255,255,0.1);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 20px;
      }
      th, td {
        padding: 12px 15px;
        text-align: center;
      }
      th {
        background: #e94560;
        font-weight: 600;
      }
      tr:nth-child(even) {
        background: rgba(255,255,255,0.05);
      }
      .total-row {
        background: #0f3460 !important;
        font-weight: bold;
        font-size: 1.1em;
      }
      .add-form {
        background: rgba(255,255,255,0.1);
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
      }
      .add-form h3 {
        margin-bottom: 15px;
        color: #e94560;
      }
      .form-group {
        margin-bottom: 15px;
      }
      label {
        display: block;
        margin-bottom: 5px;
        color: #ccc;
      }
      input[type="text"], input[type="number"] {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: rgba(255,255,255,0.2);
        color: #fff;
        font-size: 16px;
      }
      .radio-group {
        display: flex;
        gap: 20px;
      }
      .radio-group label {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        color: #fff;
      }
      .radio-group input[type="radio"] {
        width: 18px;
        height: 18px;
        accent-color: #e94560;
      }
      button {
        width: 100%;
        padding: 12px;
        background: #e94560;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
      }
      button:hover {
        background: #ff6b6b;
      }
  body
    .container
      h1= title

      .add-form
        form(action="/add" method="POST")
          .form-group
            .radio-group
              label
                input(type="radio" name="player" value="Kaille" required)
                span Kaille
              label
                input(type="radio" name="player" value="Francis")
                span Francis
          .form-group
            input(type="text" name="points" id="points" inputmode="numeric" pattern="[0-9]*" required placeholder="Score")
          button(type="submit") Ajouter

      table
        thead
          tr
            th #
            th Date
            th Kaille
            th Francis
        tbody
          - var reversedCounts = counts.slice().reverse()
          each count, index in reversedCounts
            tr
              td= counts.length - index
              -
                const months = ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Juin', 'Juil', 'Août', 'Sep', 'Oct', 'Nov', 'Déc'];
                let dateStr = '-';
                if (count.datetime) {
                  const d = new Date(count.datetime);
                  if (!isNaN(d.getTime())) {
                    dateStr = d.getDate() + ' ' + months[d.getMonth()];
                  }
                }
              td= dateStr
              td= count.kaille || '-'
              td= count.francis || '-'
          tr.total-row
            td Total
            td
            - var totalKaille = counts.reduce((sum, c) => sum + (c.kaille || 0), 0)
            - var totalFrancis = counts.reduce((sum, c) => sum + (c.francis || 0), 0)
            td= totalKaille
            td= totalFrancis
